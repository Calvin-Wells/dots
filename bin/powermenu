#!/usr/bin/env bash

# Menu options
shutdown="$(printf '\Uf0425')"
reboot="$(printf '\Uf0709')"
suspend="$(printf '\Uf04b2')"
logout="$(printf '\Uf0343')"

# Give options to rofi and save choice
chosen="$(echo -e "$shutdown\n$reboot\n$suspend\n$logout" | rofi -dmenu -config "$HOME/.config/rofi/powermenu.rasi" )"

case "$chosen" in
  "$shutdown")
    poweroff
    ;;
  "$reboot")
    reboot
    ;;
  "$suspend")
    systemctl suspend
    ;;
  "$logout")
    niri msg action quit
    ;;
  *)
    exit 0
    ;;
esac
